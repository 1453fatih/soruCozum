#include <iostream>
#include <math.h>
using namespace std;

bool Asal(int sayi){

    int sayac =0;
    for(int j=2; j<sqrt(sayi); j++)
    {
        if(sayi % j == 0)
        {
            sayac++;
            break;
        }
    }
    if(sayac == 0)
    {
        return true;
    }
    else
        return false;

}
int main() {
    int sayi;
    int sayac=0;
    cout<<"BIR SAYI GIRINIZ:";
    cin>>sayi;
    sayi++;
    while(true){
        if(sayi%2==0 || sayi%5==0 || sayi%3 ==0){
            sayi++;
        }
        else{
            if(Asal(sayi))
                break;
            else
                sayi++;
        }

    }
    cout<<sayi;
    return 0;
}
